<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track of the Dark Mode Switch when the switch is not checked -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey"/>
            <corners android:radius="@dimen/switchTrackCornersRadius"/>
            <stroke android:color="@color/grey"
                android:width="@dimen/strokeWidth"/>
        </shape>
    </item>

    <!-- Track of the Dark Mode Switch when the switch is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="@dimen/switchTrackCornersRadius"/>
        </shape>
    </item>
</selector>